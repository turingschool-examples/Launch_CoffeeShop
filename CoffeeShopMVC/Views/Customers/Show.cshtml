@model Customer
<h1>@Model.Name</h1>
<h3>@Model.Email</h3>
<h4>@Model.TotalSpent()</h4>
<h2>All Items</h2>

@foreach(string item in Model.AllItems())
{
    <p>@item</p>
}

<h5><a href="/customers/@Model.Id/orders">@Model.Name Order's page</a></h5>

@if(Model.Orders.Count() == 0)
{
    <form method="post" action="/customers/delete/@Model.Id">
        <button type="submit">Delete</button>    
    </form>
}